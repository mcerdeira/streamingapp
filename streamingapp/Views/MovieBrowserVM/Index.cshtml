@model IEnumerable<streamingapp.Models.MovieBrowserVM>

@{
    ViewBag.Title = "Index";
}

<h2>Search</h2>

@using (Html.BeginForm())
{
    <p>
        Search Movie: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}   

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Director.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rank)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>               
                @Html.ActionLink(item.Title, "Watch", new { id = item.Media.Id })

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producer)
            </td>
            <td>
                @Html.Raw(item.Rank)
            </td>
            <td>
                @Html.ActionLink("Watch", "Watch", new { id = item.Media.Id })
            </td>
            <td>
                @Html.HiddenFor(modelItem => item.Media.MediaLink)
            </td>
        </tr>
    }

</table>
